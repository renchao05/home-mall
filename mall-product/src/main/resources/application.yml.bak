server:
  port: 10000
  servlet:
    session:
      cookie:
        name: GULISESSION
        domain: mall.com

spring:
  application:
    name: mall-product
  cloud:
    nacos:
      discovery:
        server-addr: 192.168.123.205:8848 #配置Nacos地址
    # sentinel
    sentinel:
      transport:
        dashboard: localhost:8088
        port: 8719
  zipkin:
    base-url: http://192.168.123.205:9411/
    discoveryClientEnabled: false
    sender:
      type: web # 设置使用 http 的方式传输数据
  sleuth:
    sampler:
      #采样率值介于 0 到 1 之间，1 则表示全部采集
      probability: 1.0

  datasource:
    type: com.alibaba.druid.pool.DruidDataSource
    #MySQL配置
    driverClassName: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://192.168.123.205:3306/mall_pms?useUnicode=true&characterEncoding=UTF-8&useSSL=false&serverTimezone=Asia/Shanghai
    username: root
    password: root
  jackson:
    date-format: yyyy-MM-dd HH:mm:ss
  thymeleaf:
    cache: false  # 暂时关闭 thymeleaf 缓存
  redis:
    host: 192.168.123.205
    password:
  # 配置缓存类型
  cache:
    type: redis
    redis:
      time-to-live: 360000
      cache-null-values: true #缓存空值
  session:
    store-type: redis # 分布式session配置




mybatis-plus:
  mapper-locations: classpath:/mapper/**/*.xml
  global-config:
    db-config:
      # 主键自增
      id-type: auto
#      logic-delete-field: showStatus
      logic-delete-value: 0
      logic-not-delete-value: 1

#logging:
#  level:
#    com.renchao.mall.product.dao: debug
logging:
  level:
    org.springframework.cloud.openfeign: debug
    org.springframework.cloud.sleuth: debug


mall:
  thread:
    core-size: 20
    max-size: 100
    keep-alive-time: 10

management:
  endpoints:
    web:
      exposure:
        include: "*"

feign:
  sentinel:
    enabled: true