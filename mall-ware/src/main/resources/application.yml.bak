    password: root
  jackson:
    date-format: yyyy-MM-dd HH:mm:ss

  # RabbitMQ 配置，其他的配置都有默认值
  rabbitmq:
    host: 192.168.123.205
    password: yue@199005

mybatis-plus:
  mapper-locations: classpath:/mapper/**/*.xml
  global-config:
    db-config:
      # 主键自增
      id-type: auto

logging:
  level:
    com.renchao.gulimall.ware.dao: debug

management:
  endpoints:
    web:
      exposure:
        include: "*"